<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EventManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:EventManager.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EventManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="EventManager">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <!-- <ScrollViewer> -->
    <RelativePanel>
        <Button RelativePanel.AlignTopWithPanel="True" Name="LoadButton" Command="{Binding Load}">Load</Button>
        <views:EventsList RelativePanel.AlignBottomWithPanel="True"
                          Margin="0 10"
                          RelativePanel.Below="LoadButton"
                          DataContext="{Binding EventsList}" />
    </RelativePanel>
    <!-- </ScrollViewer> -->

</Window>
