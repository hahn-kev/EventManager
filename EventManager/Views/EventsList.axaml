<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EventManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Name="view"
             x:Class="EventManager.Views.EventsList">
    <Design.DataContext>
        <vm:EventsListViewModel />
    </Design.DataContext>
    <DockPanel>
        <TextBox DockPanel.Dock="Top" Watermark="filter" Text="{Binding Filter ,Mode=TwoWay}" />
        <ListBox Width="300" Items="{Binding Events^}" SelectedItem="{Binding SelectedEvent}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="5" Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
